<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/settingLayout"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/listview_background"
    android:clipChildren="false"
    android:clipToPadding="false"
    tools:context="alex.personalvocabulary.RepeatFragment">

   <TextView
       android:layout_width="50dp"
       android:layout_height="50dp"
       android:layout_marginTop="15dp"
       android:text="125"
       android:textColor="@android:color/black"
       android:padding="2dp"
       android:gravity="center"
       android:textSize="17sp"

       android:id="@+id/number_TextView"
       />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="fill_vertical">



        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="sdfsdfsdfsdfsdfsdfsdf"
            android:textColor="@android:color/black"
            android:textSize="23sp"
            android:id="@+id/list_view_word_TextView"
            android:paddingBottom="1dp"
            android:paddingLeft="10dp"
            android:paddingTop="10dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/list_view_word_TextView"
            android:text="sdfsdfsdfsdfsdgggggfsdfsdf"
            android:textColor="@android:color/black"
            android:textSize="15sp"
            android:id="@+id/list_view_translation_TextView"
            android:paddingBottom="15dp"
            android:paddingLeft="10dp"
            android:paddingTop="1dp"/>



    </RelativeLayout>


</LinearLayout>
